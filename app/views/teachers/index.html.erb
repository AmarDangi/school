    <th colspan="3">Action</th>
    
    <%# <th colspan="3">Action</th> %>
    
  </tr>
  </thead>
  <% @teachers.each do |teacher|  %>
<tbody>
  <tr>
    <td> <%= teacher.id %></td>
    <td> <%= teacher.first_name %></td>
    <td> <%= teacher.last_name %></td>
    <td> <%= teacher.age %></td>
    <td> <%= teacher.email %></td>
    <td> <%= teacher.uniq_id%></td>
    <td> <%= teacher.experience %></td>
    <td> <%= teacher.mobile_no %></td>
    <td> <%= teacher.about %></td>
    <td> <%= teacher.school_id %></td>
     <td> <%= link_to "View"%></td>
    <td> <%= link_to "Edit" %></td>
    <td> <%= link_to "delete", {:controller => :teachers, :action => 'destroy', :id => teacher.id }, :method => :delete %></td>
  </tr>
  </tbody>
  <%end%>

</table>
