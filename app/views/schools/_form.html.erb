<div class='container' >
<%= form_with url: "/school_create", method: :post do |form| %>

<div  class="field form-group" >
  <%= form.label :school_name, "School name" %>
  <%= form.text_field :school_name, class:"form-control", placeholder:"School Name" %><br>
  </div>
  <div  class="field form-group" >
  <%= form.label :city, "City " %>
  <%= form.text_field :city ,class:"form-control", placeholder:"City Name"%> <br>
  </div>
  <%= hidden_field_tag 'school_director_id', @school_director.id  %>

    <div  class="field form-group" >
      <input type="checkbox" id="approve_by_gov" name="approve_by_gov" checked value="true/false">
      <label for="approve_by_gov">Approve by government</label>
    </div>
  <%= form.submit "Create", class:"btn btn-success"%> 

</div>
<% end %>
