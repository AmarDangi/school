<body>
<div>
<div style='background-color:gray;'>
<h2 align='center'>SCHOOL DIRECTOR TABLE</h2>
</div>
<table style="width:50%; margin-left: 468px;"  align='center' >
<thead>
  <tr >
    <th>Id</th>
    <th>First_name</th>
    <th>Last_name</th>
    <th>Email</th>
    <th>Mobile_no</th>
    <th>Location</th>
    <th>About</th>
    <th colspan="3">Action</th>
    
  </tr>
  <thead>
  <% @school_directors.each do |director|  %>
<tbody>
  <tr>
    <td> <%= director.id %></td>
    <td> <%= director.first_name %></td>
    <td> <%= director.last_name %></td>
    <td> <%= director.email %></td>
    <td> <%= director.mobile_no %></td>
    <td> <%= director.location %></td>
    <td> <%= director.about %></td>
    <td> <%= link_to "View", school_director_path(director), :method => :get %></td>
    <td> <%= link_to "Edit", edit_school_director_path(director) %></td>
    <td> <%= link_to "delete", {:controller => :school_directors, :action => 'destroy', :id => director.id }, :method => :delete %></td>
  </tr>
  </tbody>
  <%end%>

</table>
