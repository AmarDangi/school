<div class="container"><br><br><br>
    <div class="main-body">
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                  <% if  @school_director.image.present?%>
                  <%= image_tag @school_director.image, :class=> "img-circular"%> 
                  <%else%>
                  <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                  <%end%>
                    <div class="mt-3">
                      <h4><%= @school_director.first_name.capitalize %> <%= @school_director.last_name.capitalize %></h4>
                      <p class="text-secondary mb-1">School Director</p>
                      <p class="text-muted font-size-sm"><%= @school_director.location %></p>
                      <%# <button class="btn btn-outline-primary">School Create</button> %>
                      <% if !@school_director.school.present?%>
                      <%= link_to "School Create", new_school_director_school_url(@school_director), :class=>"btn btn-primary" %>
                      <%end%>
                      <button class="btn btn-outline-primary">Message</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @school_director.first_name.capitalize %> <%= @school_director.last_name.capitalize %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @school_director.email %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Mobile</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @school_director.mobile_no %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">About</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                       <%= @school_director.about %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Location</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                       <%= @school_director.location %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12"></div>
                  <%= link_to "Edit", edit_school_director_path(@school_director), :class=>"btn btn-primary" %>
                    </div>
                  </div>
                </div>
              </div>
               


            </div>
          </div>

        </div>
    </div>
 <%if @school.present? %>
<div class="container">
 <div class="col-md-15">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">

                      <h6 class="mb-0">School_uniq_id</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @school.school_uniq_id %> 
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">School_name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @school.school_name %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">City</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @school.city %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Approve_by_gov</h6>
                    </div>
                  <div class="col-sm-9 text-secondary">
                    <%= @school.approve_by_gov %>
               </div>
                  <hr>
                  </div>
                  <%end%>

                   <div class="text-center">
                   <button type="submit"> <%= link_to 'Create', "#{@school_director.id}/school/#{@school.id}/teachers/new", class:"btn btn-success" %></button>
                 </div>

                    

                 



     